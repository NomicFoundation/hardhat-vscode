{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "outDir": "out",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./client",
    "./server",
    "./coc",
    "./test",
    "./test/**/*.json",
    "./scripts"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "./server/test",
    "./client/out",
    "./server/out",
    "./coc/out",
    "./test/protocol",
    "./out",
    ".eslintrc.js"
  ],
  "references": [
    {
      "path": "./client"
    },
    {
      "path": "./server"
    },
    {
      "path": "./coc"
    }
  ]
}
