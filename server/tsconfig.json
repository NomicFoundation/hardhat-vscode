{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "out",
    "rootDir": "src",
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "composite": true,
    "declaration": true,
    "baseUrl": "./src",
    "paths": {
      "@compilerDiagnostics/*": ["./compilerDiagnostics/*"],
      "@analyzer/*": ["./parser/analyzer/*"],
      "@common/*": ["./parser/common/*"],
      "@services/*": ["./parser/services/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", ".vscode-test"]
}
