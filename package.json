{
	"name": "solidity-extension",
	"publisher": "tenderly",
	"description": "The solidity-extension contains the language smarts behind the solidity editing experience of Visual Studio Code.",
	"license": "MIT",
	"version": "0.0.1",
	"main": "./client/out/extension.js",
	"module": "./client/out/extension.js",
	"icon": "docs/images/solidity-logo.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/Tenderly/vscode-solidity"
	},
	"bugs": {
		"url": "https://github.com/Tenderly/vscode-solidity/issues"
	},
	"engines": {
		"vscode": "^1.59.0"
	},
	"activationEvents": [
		"onLanguage:solidity"
	],
	"scripts": {
		"build": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && yarn install && cd ../server && yarn install && cd ..",
		"test-postinstall": "yarn --cwd ./test/integration/tests/import-navigation/testdata install",
		"test": "yarn run test-postinstall && yarn run build && node ./out/test/runTests.js",
		"lint": "yarn prettier --check && yarn eslint && yarn --cwd ./client lint && yarn --cwd ./server lint",
		"lint:fix": "yarn prettier --write && yarn eslint --fix && yarn --cwd ./client lint:fix && yarn --cwd ./server lint:fix",
		"prettier": "prettier *.md *.json \"{docs,.github,.vscode}/**/*.{md,yml}\" \"test/**/*.ts\"",
        "eslint": "eslint ./test/**/*.ts"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "^16.9.1",
		"@types/vscode": "^1.59.0",
		"@typescript-eslint/eslint-plugin": "5.8.0",
		"@typescript-eslint/parser": "5.8.0",
		"eslint": "8.5.0",
		"eslint-config-prettier": "8.3.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.1",
		"prettier": "2.5.1",
		"typescript": "^4.4.3",
		"vscode-test": "^1.6.1",
		"wsrun": "5.2.4",
		"yarn": "^1.22.11"
	},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	},
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Solidity configuration",
			"properties": {
				"solidity.formatter": {
					"type": "string",
					"default": "prettier",
					"enum": [
						"none",
						"prettier"
					],
					"description": "Enables / disables the solidity formatter (prettier solidity default)"
				}
			}
		},
		"languages": [
			{
				"id": "solidity",
				"aliases": [
					"Solidity",
					"solidity"
				],
				"extensions": [
					".sol"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "solidity",
				"scopeName": "source.solidity",
				"path": "./syntaxes/solidity.json"
			}
		],
		"snippets": [
			{
				"language": "solidity",
				"path": "./snippets/solidity.json"
			}
		]
	}
}
