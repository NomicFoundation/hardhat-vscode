{
	"name": "solidity-extension",
	"publisher": "tenderly",
	"description": "The solidity-extension contains the language smarts behind the solidity editing experience of Visual Studio Code.",
	"license": "MIT",
	"version": "0.0.1",
	"main": "./client/out/extension.js",
	"module": "./client/out/extension.js",
	"icon": "docs/images/solidity-logo.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/Tenderly/vscode-solidity"
	},
	"bugs": {
		"url": "https://github.com/Tenderly/vscode-solidity/issues"
	},
	"engines": {
		"vscode": "^1.59.0"
	},
	"activationEvents": [
		"onLanguage:solidity"
	],
	"scripts": {
		"build": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && yarn install && cd ../server && yarn install && cd ..",
		"test": "yarn run build && node ./out/test/runTests.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.59.0",
		"@typescript-eslint/eslint-plugin": "^4.22.1",
		"@typescript-eslint/parser": "^4.22.1",
		"eslint": "^7.25.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.1",
		"typescript": "^4.2.2",
		"vscode-test": "^1.5.2",
		"yarn": "^1.22.11"
	},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	},
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Solidity configuration"
		},
		"languages": [
			{
				"id": "solidity",
				"aliases": [
					"Solidity",
					"solidity"
				],
				"extensions": [
					".sol"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "solidity",
				"scopeName": "source.solidity",
				"path": "./syntaxes/solidity.json"
			}
		],
		"snippets": [
			{
				"language": "solidity",
				"path": "./snippets/solidity.json"
			}
		]
	}
}
